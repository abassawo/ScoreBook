
CREATE TABLE games (
    id TEXT NOT NULL,
    name TEXT NOT NULL,
    dateCreated INTEGER NOT NULL,
    isClosed INTEGER AS Boolean DEFAULT 0,
    strategy TEXT NOT NULL,
    playerIds TEXT NOT NULL
 );

 selectAll:
 SELECT *
 FROM  games
 ORDER BY dateCreated;

 insertOrReplace:
 INSERT OR REPLACE INTO games(
   id,
   name,
   dateCreated,
   isClosed,
   strategy,
   playerIds
 )
 VALUES (?, ?, ?, ?, ?, ?);

 selectById:
 SELECT *
 FROM games
 WHERE id = ?;

 empty:
 DELETE FROM games;

 deleteByLabel:
 DELETE
 FROM games
 WHERE id = ?;